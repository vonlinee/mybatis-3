<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.apache.ibatis.submitted.pagination.Mapper">

  <select id="selectUsers" resultType="org.apache.ibatis.submitted.pagination.User">
    select * from users
    where name like '%${name}%'
    <pagination page-num="pageNum:15" page-size="pageSize:10"/>
  </select>

  <select id="selectUsers1" resultType="org.apache.ibatis.submitted.pagination.User">
    select * from users
    where name like '%${name}%'
    <pagination page-num="1" page-size="10"/>
  </select>

  <select id="selectUsers2" resultType="org.apache.ibatis.submitted.pagination.User">
    select * from users
    where name like '%${name}%'
    <pagination/>
  </select>

  <select id="selectCount" resultType="int">
    select count(*) from users
    where name like '%${name}%'
  </select>

  <select id="selectPage" resultType="org.apache.ibatis.submitted.pagination.User" countSql="selectCount">
    select * from users
    where name like '%${name}%'
    <pagination/>
  </select>

  <select id="selectPage1" resultType="org.apache.ibatis.submitted.pagination.User" countSql="selectCount">
    select * from users
    where name like '%${name}%'
    <pagination page-num="pageNum" page-size="pageSize"/>
  </select>

  <select id="selectPage2" resultType="org.apache.ibatis.submitted.pagination.User" countSql="selectCount">
    select * from users
    where name like '%${name}%'
    <pagination page-num="pageNum" page-size="pageSize"/>
  </select>
</mapper>
